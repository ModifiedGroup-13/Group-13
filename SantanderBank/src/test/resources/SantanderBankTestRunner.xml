<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="SantanderBank Automation Script" parallel="false">

    <parameter name="useCloudEnv" value="false"/>
    <parameter name="cloudEnvName" value="browserstack"/>
    <parameter name="os" value="Windows"/>
    <parameter name="os_version" value="10"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="60.0"/>
    <parameter name="url" value="https://www.santanderbank.com"/>

    <test name = "SantanderBank Test">
        <classes>
            <class name="testHomePage.TestMainPage"/>
            <class name="testHomePage.TestHoverOver"/>
            <class name="testHomePage.TestSearch"/>
            <class name="testHomePage.TestTextOption"/>
            <class name="dataDrivenModel.TestConnectMongoDB"/>
            <class name="dataDrivenModel.TestConnectToMySql"/>
            <class name="dataDrivenModel.TestGoogleSheetReader"/>
            <class name="dataDrivenModel.TestExcelReaderPage"/>
        </classes>
    </test>

</suite>